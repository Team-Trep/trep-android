<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trep" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text.MediumText15sp" parent="android:TextAppearance">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.MediumTextNotPadding15sp" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.MediumText16sp" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.BoldText15sp" parent="android:TextAppearance">
        <item name="android:paddingLeft">24sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.MediumErrorText12sp" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red_error</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>